{
    "compilerOptions": {
        "baseUrl": "./",
        "sourceMap": true,
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "ES2020",
            "dom"
        ],
        "types": [
            "node"
        ],
        "paths": {
            "~/*": [
                "src/app_shared/*"
            ],
            "@/*": [
                "src/*"
            ]
        },
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "functions/**/*.ts",
        "src/**/*.vue"
    ],
    "exclude": [
        "src/**/*test*.ts"
    ]
}